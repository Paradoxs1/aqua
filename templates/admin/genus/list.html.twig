{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th># of scientists</th>
            <th>Last updated</th>
        </tr>
        </thead>
        <tbody>
        {% for genus in genuses %}
            <tr>
                <td><a href="{{ path('admin_genus_edit', {'id': genus.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>{{ genus.name }}</td>
                <td>{{ genus.speciesCount }}</td>
                <td>{{ genus.genusScientists|length }}({{ genus.expertScientists|length }} experts)</td>
                <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}